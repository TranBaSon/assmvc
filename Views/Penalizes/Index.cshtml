@model PenalizeManagement.Models.ResponeEntitycs

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    <div>TotalPayment: @Model.totalPayment</div>
    <div>TotalPushUp: @Model.totalPushUp</div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            RollNumber
        </th>
        <th>
            PenaltyOption
        </th>
        <th>
            amount
        </th>
        <th>
            Deadline
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Penalizes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RollNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PenaltyOption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadline)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
